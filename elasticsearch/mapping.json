{
  "settings": {
    "index": {
      "number_of_shards": 1,
      "number_of_replicas": 1
    },
    "analysis": {
      "analyzer": {
        "en_analyzer": {
          "type": "custom",
          "tokenizer": "lowercase",
          "char_filter": ["punct_char_filter"],
          "filter": ["edge_n_gram_filter"]
        },
        "si_analyzer": {
          "type": "custom",
          "tokenizer": "icu_tokenizer",
          "char_filter": ["punct_char_filter"],
          "filter": ["edge_n_gram_filter"]
        }
      },
      "char_filter": {
        "punct_char_filter": {
          "type": "mapping",
          "mappings": [
            ".=>\\u0020",
            "'=>\\u0020",
            ",=>\\u0020",
            "@=>\\u0020"
          ]
        }
      },
      "filter": {
        "edge_n_gram_filter": {
          "type": "edge_ngram",
          "min_gram": "2",
          "max_gram": "20",
          "side": "front"
        }
      }
    }
  },

  "mappings": {
    "properties": {
      "civil": {
        "type": "keyword",
        "analyzer": "si_analyzer"
      },
      "dob": {
        "type": "date",
        "format": "dd-mm-yyy"
      },
      "electoral": {
        "type": "keyword",
        "analyzer": "si_analyzer"
      },
      "email": {
        "type": "text",
        "analyzer": "en_analyzer"
      },
      "name": {
        "type": "text",
        "analyzer": "si_analyzer"
      },
      "party": {
        "type": "keyword",
        "analyzer": "si_analyzer"
      },
      "religion": {
        "type": "keyword",
        "analyzer": "si_analyzer"
      },
      "committees": {
        "type": "text",
        "analyzer": "si_analyzer"
      }
    }
  }
}
